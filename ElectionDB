show databases;
CREATE DATABASE ELECTION;
USE ELECTION;
CREATE TABLE party(
     party_id INT PRIMARY KEY AUTO_INCREMENT,
     party_name VARCHAR(200),
     symbol VARCHAR(100),
     leader_name VARCHAR(100)
);

CREATE TABLE voter (
    voter_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    age INT CHECK (age >= 18),
    constituency_id INT,
    voted_candidate_id INT,
    FOREIGN KEY (constituency_id) REFERENCES constituency(constituency_id),
    FOREIGN KEY (voted_candidate_id) REFERENCES candidate(candidate_id)
);
DELIMITER $$

CREATE PROCEDURE populate_voters()
BEGIN
    DECLARE i INT DEFAULT 1;
    DECLARE c_id INT;
    DECLARE cand_id INT;

    WHILE i <= 10000 DO
        -- Pick a random constituency between 1 and 10 (adjust if you add more)
        SET c_id = FLOOR(1 + RAND() * 10);

        -- Pick a random candidate from that constituency
        SELECT candidate_id INTO cand_id
        FROM candidate
        WHERE constituency_id = c_id
        ORDER BY RAND()
        LIMIT 1;

        -- Insert voter with random name, age, and vote
        INSERT INTO voter (name, age, constituency_id, voted_candidate_id)
        VALUES (
            CONCAT('Voter_', i),
            FLOOR(18 + (RAND() * 62)),  -- Age between 18â€“80
            c_id,
            cand_id
        );

        SET i = i + 1;
    END WHILE;
END$$

DELIMITER ;
CALL populate_voters();
select * from voter;

